@page "/contact.html"
@model ContactRequestModel
@{
    ViewData["Title"] = "Trang liên hệ";
}


<h1 class = "display-4">Trang liên hệ</h1>
<p>Điền các thông tin liên hệ</p>
<hr>

<form class ="bg-light p-2 m-2" method="post" asp-page="ContactRequest">
    <div class="mb-3">
        <label class= "form-label" asp-for="@Model.userContact.UserID"></label>
        <input class="form-control" asp-for="@Model.userContact.UserID"/>
        <span class="text-danger" asp-validation-for="userContact.UserID"></span>
    </div>
   <div class="mb-3">
        <label class= "form-label" asp-for="@Model.userContact.Email"></label>
        <input class="form-control" asp-for="@Model.userContact.Email"/>
        <span class="text-danger" asp-validation-for="userContact.Email"></span>
    </div>
    <div class="mb-3">
        <label class= "form-label" asp-for="@Model.userContact.UserName"></label>
        <input class="form-control" asp-for="@Model.userContact.UserName"/>
        <span class="text-danger" asp-validation-for="userContact.UserName"></span>
    </div>
    <button class = "btn btn-danger" type="submit">Gửi</button>
</form>

<div class="alert alert-danger">
    <p>Thông tin User</p>
    <ul>
        <li>UserID: @Model.userContact.UserID</li>
        <li>Email: @Model.userContact.Email</li>
        <li>UserName: @Model.userContact.UserName</li>
    </ul>
</div>

@* Add JavaScript vào code *@
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}